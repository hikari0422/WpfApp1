<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="347" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Background="Aqua">
            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>

            <StackPanel Height="38" Background="Beige" Margin="5, 5, 5, 0" Orientation="Horizontal">
                <Label Content="紅茶大杯" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30"/>
                <Label Content="60元" FontSize="14" FontWeight="Bold" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50, 2, 0, 2" Height="30" Foreground="Red"/>
                <TextBox TextWrapping="Wrap" Width="120" Margin="50, 0, 0, 0" VerticalAlignment="Center" Height="30" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" FontSize="14" TextChanged="TextBox_Changed"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Column="1" x:Name="OrderBtn" Content="訂購" Margin="0, 78, 0, 0" Height="38" Width="100" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" Click="OrderBtn_Click"/>
        <TextBlock Margin="10, 10, 10, 10" Grid.Row="1" TextWrapping="Wrap" Background="Cyan" />


    </Grid>
</Window>
