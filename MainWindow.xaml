<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800" Background="#FFC7E48D">
        <Grid x:Name="multiplicationGrid" Margin="0,60,0,0">
            <Label Content="輸入" FontSize="20" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="input" HorizontalAlignment="Left" Margin="80,5,0,0" VerticalAlignment="Top" Width="92" Height="25"/>
            <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="185,5,0,0"
                    Width="72" Height="24" x:Name="submit" Click="submit_Click"/>
            <TextBox x:Name="ansBox" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"
                     Width="625" Height="271" TextWrapping="Wrap"/>
        </Grid>
</Window>
